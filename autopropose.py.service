[Unit]
Description=RNode Periodic Propose
Requires=docker.service
After=docker.service

[Service]
WorkingDirectory=/opt/rchain-testnet-node
ExecStart=/root/.local/bin/pipenv run /opt/rchain-testnet-node/autopropose.py
EnvironmentFile=/opt/rchain-testnet-node/autopropose.py.env
Restart=on-failure
RestartSec=15

[Install]
WantedBy=multi-user.target
